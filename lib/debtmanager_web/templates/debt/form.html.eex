<%= form_for @changeset, Routes.debt_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= select(f, :email, @friends) %>
  <%= select(f, :value, 0..120) %>


  <%= label f, :reminder %>
  <%= checkbox f, :reminder %>
  <%= error_tag f, :reminder %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
